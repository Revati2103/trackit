{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node"
      },
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "client/build"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/.*",
        "dest": "server.js"
      },
      {
        "src": "/(.*)",
        "dest": "client/$1",
        "headers": {
          "Cache-Control": "public, max-age=0, must-revalidate"
        }
      }
    ],
    "env": {
      "MONGO_URI": "${env.MONGO_URI}"
    },
    "build": {
      "command": "npm install --legacy-peer-deps && npm run build"
    }
  }
  